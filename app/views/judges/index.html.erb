<h1>Judges</h1>

<table>
  <thead>
    <tr>
      <th>Company</th>
      <th>Department</th>
      <th>Contact name</th>
      <th>Contact email</th>
      <th>Has tablet</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @judges.each do |judge| %>
      <tr>
        <td><%= judge.company %></td>
        <td><%= judge.department %></td>
        <td><%= judge.contact_name %></td>
        <td><%= judge.contact_email %></td>
        <td><%= judge.has_tablet %></td>
        <td><%= link_to 'Show', judge %></td>
        <td><%= link_to 'Edit', edit_judge_path(judge) %></td>
        <td><%= link_to 'Destroy', judge, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Judge', new_judge_path %>
