<div class="card">
  <h5 class="card-header">
    <%= project_name(project) %>
  </h5>
  <div class="card-body">
    <div class="card-info row">
      <div class="col-md-3">
        <strong>Categoría:</strong>
      </div>
      <% if project.committee_evaluation.present? %>
        <div class="col-md-3">
          <strong>Calificación:</strong>
          <%= display_project_score(project) %>
        </div>
      <% end %>
      <% if project.project_event_detail.present? %>
        <div class="col-md-3">
          <strong>Fecha:</strong>
        </div>
        <div class="col-md-3">
          <strong>Stand:</strong>
          <%= display_project_stand(project) %>
        </div>
      <% end %>
    </div>
    <h6 class="card-title">
      <strong><%= display_project_status(project) %></strong>
    </h6>
    <p class="card-text">
      <%= project_description(project) %>
    </p>
    <hr class="my-4">
    <p class="card-text">
      <strong>Profesor:</strong>
      <%= display_project_professor_info(project) %>
    </p>
    <p class="card-text">
      <strong>Estudiante:</strong>
      <%= display_project_student_info(project) %>
    </p>
    <a href="#" class="btn btn-light">Ver abstract</a>
    <a href="#" class="btn btn-light">Acciones</a>
  </div>
</div><br />
